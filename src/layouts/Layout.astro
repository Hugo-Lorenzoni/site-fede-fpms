---
import { ViewTransitions } from 'astro:transitions';
import '@/styles/globals.css'

import Nav from '@/components/Nav.astro';
import Footer from '@/components/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr-BE">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta
		  name="title"
		  content="Site de la Fédération des étudiants de la Faculté Polytechnique de Mons (F.P.Ms)"
		/>
		<meta
		  name="description"
		  content="la Fédération des étudiants FPMs (aussi appelée Fédé ou fede) a comme rôle de représenter les étudiants de la Polytech de Mons dans le contexte académique et folklorique"
		/>
		<meta name="author" content="Commission Web FPMs 184" />
		<!-- <link
		  rel="canonical"
		  href="https://federation-des-etudiants-fpms.vercel.app/"
		/> -->
		<link rel="canonical" href="https://fede.fpms.as.be" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Fédé FPMs - {title}</title>
		<ViewTransitions />
	</head>
	<body class="text-blue-900 ">
		<Nav />
		<slot />
		<Footer />
	</body>
</html>
